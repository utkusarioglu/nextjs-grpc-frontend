{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "paths": {
      "openapi": [
        "../../packages/openapi"
      ],
      "grpc": [
        "../../packages/grpc"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/openapi"
    },
    {
      "path": "../../packages/grpc"
    },
  ]
}
