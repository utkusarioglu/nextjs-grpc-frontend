{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "composite": true,
    // "isolatedModules": false,
    // "module": "ESNext",
    // "target": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,

    "paths": {
      "store": ["../../packages/store"],
      "web3": ["../../packages/web3"],
      "i18n": ["../../packages/i18n"],
      "openapi": ["../../packages/openapi"],
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/store"
    },
    {
      "path": "../../packages/web3"
    },
    {
      "path": "../../packages/i18n"
    },
    {
      "path": "../../packages/openapi"
    }
  ]
}
