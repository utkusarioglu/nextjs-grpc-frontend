{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "composite": true,
    // "isolatedModules": false,
    // "module": "ESNext",
    // "target": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    
    "isolatedModules": true,

    "paths": {
      "store/*": ["../../packages/store/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/store"
    }
  ]
}
